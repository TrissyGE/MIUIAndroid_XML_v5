    </style>
    <style name="TextAppearance.FlatshowPageNo" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/flatshow_pageno_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/flatshow_pageno_text_color</item>
        <item name="android:shadowColor">@color/flatshow_pageno_text_shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="MessageButton">
        <item name="android:textSize">@dimen/text_font_size_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="MessageButton.Alert" parent="@style/MessageButton">
        <item name="android:textColor">@color/message_button_alert_text_color</item>
        <item name="android:background">@drawable/alert_btn</item>
    </style>
    <style name="MessageButton.Common" parent="@style/MessageButton">
        <item name="android:background">@drawable/common_btn</item>
    </style>
    <style name="UnreadMessageCount">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@miui:color/v5_primary_text_dark</item>
    </style>
    <style name="HighlightedSendButton" parent="@miui:style/V5.TextAppearance.Button">
        <item name="android:textSize">@dimen/send_button_text_font_size</item>
        <item name="android:textColor">@color/highlight_text</item>
    </style>
    <style name="NormalTextSendButton" parent="@miui:style/V5.TextAppearance.Button">
        <item name="android:textSize">@dimen/send_button_text_font_size</item>
    </style>
