<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Light" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Light.Title" parent="@miui:style/V5.Theme.Light" />
    <style name="Theme.Light.ActionBar.NoTitle" parent="@miui:style/V5.Theme.Light.ActionBar.NoTitle" />
