    </style>
    <style name="TextAppearance.FlatshowTitle.Highlight" parent="@style/TextAppearance.FlatshowTitle">
        <item name="android:textColor">@color/highlight_text</item>
        <item name="android:textColorLink">@color/highlight_text</item>
    </style>
    <style name="TextAppearance.FlatshowSubTitle" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/text_font_size_small</item>
    </style>
    <style name="TextAppearance.EditText" parent="@miui:style/V5.TextAppearance.EditText" />
