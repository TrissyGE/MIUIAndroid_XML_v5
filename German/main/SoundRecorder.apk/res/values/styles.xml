<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SoundRecorderTheme" parent="@miui:style/V5.Theme.Light.ActionBar.NoTitle">
        <item name="android:windowBackground">@drawable/start_background</item>
    </style>
    <style name="RecordPreviewTheme" parent="@style/SoundRecorderTheme">
        <item name="android:windowBackground">@drawable/preview_background</item>
        <item name="miui:v5_top_placeholder">@drawable/preview_title_bg</item>
    </style>
    <style name="RecordDonwloadTheme" parent="@style/RecordPreviewTheme">
        <item name="android:windowBackground">@drawable/download_background</item>
    </style>
    <style name="ListItemStyle" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine">
        <item name="android:background">@miui:drawable/v5_list_view_item_bg_dark</item>
        <item name="android:paddingLeft">28.0dip</item>
        <item name="android:paddingTop">9.0dip</item>
        <item name="android:paddingRight">28.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
    </style>
    <style name="DownloadListItemStyle" parent="@miui:style/V5.Widget.ListView.Item.TrebleLine">
        <item name="android:background">@miui:drawable/v5_list_view_item_bg_dark</item>
        <item name="android:paddingLeft">28.0dip</item>
        <item name="android:paddingTop">9.0dip</item>
        <item name="android:paddingRight">28.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:minHeight">@dimen/download_item_min_height</item>
    </style>
    <style name="ProgressStyle" parent="@miui:style/V5.Widget.ProgressBar">
        <item name="android:background">@null</item>
        <item name="android:maxWidth">18.0dip</item>
        <item name="android:maxHeight">18.0dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/loading_progress</item>
        <item name="android:minWidth">18.0dip</item>
        <item name="android:minHeight">18.0dip</item>
    </style>
</resources>
