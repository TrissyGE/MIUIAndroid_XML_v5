<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="@miui:style/V5.TextAppearance" />
    <style name="TextAppearance.Editor" parent="@style/TextAppearance">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorLink">@color/link_text</item>
    </style>
    <style name="TextAppearance.Editor.Super" parent="@style/TextAppearance.Editor">
        <item name="android:textSize">@dimen/text_font_size_super</item>
    </style>
    <style name="TextAppearance.Editor.Large" parent="@style/TextAppearance.Editor">
        <item name="android:textSize">@dimen/text_font_size_large</item>
    </style>
    <style name="TextAppearance.Editor.Medium" parent="@style/TextAppearance.Editor">
        <item name="android:textSize">@dimen/text_font_size_medium</item>
    </style>
    <style name="TextAppearance.Editor.Normal" parent="@style/TextAppearance.Editor">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
    </style>
    <style name="TextAppearance.Editor.Info" parent="@style/TextAppearance.Editor">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@*android:color/white</item>
    </style>
    <style name="TextAppearance.Title" parent="@miui:style/V5.TextAppearance.Title">
        <item name="android:textColor">@color/title_text</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="TextAppearance.Title.Large" parent="@style/TextAppearance.Title">
        <item name="android:textSize">@dimen/text_title_size_large</item>
    </style>
    <style name="TextAppearance.Title.Medium" parent="@style/TextAppearance.Title" />
    <style name="TextAppearance.Title.Small" parent="@style/TextAppearance.Title">
        <item name="android:textSize">@dimen/text_title_size_small</item>
    </style>
    <style name="TextAppearance.List.Primary" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/snippet_text</item>
    </style>
    <style name="TextAppearance.List.Secondary" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@color/info_text</item>
    </style>
    <style name="TextAppearance.Header" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/header_text_dark</item>
    </style>
    <style name="TextAppearance.Grid" parent="@miui:style/V5.TextAppearance.List.Primary" />
    <style name="TextAppearance.Grid.Primary" parent="@style/TextAppearance.Grid">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/snippet_text</item>
    </style>
    <style name="TextAppearance.Grid.Secondary" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@color/info_text</item>
    </style>
    <style name="TextAppearance.Grid.Folder" parent="@style/TextAppearance.Grid">
        <item name="android:textSize">@dimen/text_font_size_normal</item>
        <item name="android:textColor">@color/snippet_text</item>
    </style>
    <style name="None" />
    <style name="TextAppearance.HighLight" parent="@style/None">
        <item name="android:textColor">@color/user_query_highlight</item>
    </style>
    <style name="TextAppearance.Toggle" parent="@miui:style/V5.TextAppearance.TabIndicator">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_primary</item>
        <item name="android:textColor">@color/toggle_style_text</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="Widget" />
    <style name="Widget.GridText" parent="@style/Widget">
        <item name="android:paddingLeft">@dimen/grid_note_content_padding_left</item>
        <item name="android:paddingRight">@dimen/grid_note_content_padding_right</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>
    <style name="Widget.ColorSelector" parent="@style/Widget">
        <item name="android:layout_gravity">bottom|right|center</item>
        <item name="android:focusable">false</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">4.0dip</item>
        <item name="android:layout_marginBottom">5.0dip</item>
        <item name="android:src">@drawable/ic_color_picker_checkbox</item>
    </style>
    <style name="Widget.AttachmentItem" parent="@style/Widget">
        <item name="android:textSize">@dimen/action_font_size</item>
        <item name="android:textColor">@color/popup_item_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/action_padding_size</item>
        <item name="android:paddingRight">@dimen/action_padding_size</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ActionBar.Custom" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="ActionBar.Custom.Editor" parent="@style/ActionBar.Custom">
        <item name="android:height">@dimen/notes_edit_header_height</item>
    </style>
    <style name="NoteTheme" parent="@miui:style/V5.Theme.Light" />
    <style name="NoteTheme.Grid" parent="@miui:style/V5.Theme.Dark">
        <item name="android:listChoiceIndicatorMultiple">@drawable/ic_list_check</item>
        <item name="android:actionBarStyle">@style/ActionBar.Custom</item>
        <item name="miui:v5_bottom_bar_bg">@drawable/bottom_bar_bg_dark</item>
        <item name="miui:v5_bottom_bar_icon_bg">@miui:drawable/v5_bottom_bar_icon_bg_dark</item>
        <item name="miui:v5_bottom_bar_icon_text_color">@miui:color/v5_bottom_bar_icon_text_dark</item>
        <item name="miui:v5_bottom_bar_top_line">@null</item>
        <item name="miui:v5_title_bar_bg_search_mode">@drawable/search_grid_bg</item>
    </style>
    <style name="NoteTheme.List" parent="@style/NoteTheme">
        <item name="android:windowBackground">@color/note_window_bgcolor</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/ic_list_check</item>
        <item name="android:actionBarStyle">@style/ActionBar.Custom</item>
        <item name="miui:v5_bottom_bar_bg">@drawable/bottom_bar_bg</item>
        <item name="miui:v5_bottom_bar_icon_bg">@drawable/bottom_bar_icon_bg</item>
        <item name="miui:v5_bottom_bar_icon_text_color">@color/bottom_bar_icon_text_color</item>
        <item name="miui:v5_bottom_bar_top_line">@null</item>
        <item name="miui:v5_edit_text_search_bg">@drawable/edit_text_search_bg_light</item>
        <item name="miui:v5_edit_text_search_clear_btn">@drawable/edit_text_search_clear_btn_on_light</item>
        <item name="miui:v5_title_bar_back_button_search_mode">@drawable/list_title_back</item>
        <item name="miui:v5_title_bar_bg_search_mode">@drawable/search_bar_bg</item>
    </style>
    <style name="NoteTheme.Edit" parent="@style/NoteTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Custom.Editor</item>
    </style>
    <style name="NoteTheme.Alarm" parent="@style/NoteTheme">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@*android:style/Animation.Translucent</item>
    </style>
    <style name="NoteTheme.Alarm.Tip" parent="@style/NoteTheme.Alarm">
        <item name="android:windowBackground">@color/note_tip_bgcolor</item>
    </style>
    <style name="NoteTheme.Settings" parent="@miui:style/V5.Theme.Light.Settings" />
    <style name="NoteTheme.DialogActivity" parent="@miui:style/V5.Theme.Light.Dialog.NoTitle">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>
