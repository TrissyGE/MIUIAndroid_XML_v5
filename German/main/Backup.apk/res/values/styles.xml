<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar.Show.Title" parent="@*android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:displayOptions">showTitle</item>
    </style>
    <style name="Theme.Light.Show.Title" parent="@*android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Show.Title</item>
    </style>
    <style name="ListItemStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">13.0dip</item>
        <item name="android:paddingRight">13.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextAppearance.Title.Big" parent="@miui:style/V5.TextAppearance.Title">
        <item name="android:textSize">35.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/title_big_text_color</item>
    </style>
    <style name="TextAppearance.Title.Medium" parent="@miui:style/V5.TextAppearance.Title">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ActionBar.Show.Custom" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="CloudAppBatchTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <style name="CloudAppBatchTheme.Event" parent="@style/CloudAppBatchTheme">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
    </style>
    <style name="ActionBarStyle" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:background">@drawable/miui_header_panel_bg_normal</item>
    </style>
    <style name="CustomActionBarStyle" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="EditorActivityTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Show.Custom</item>
    </style>
    <style name="transparentActionBarStyle" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:background">@drawable/action_bar_transparent_bg</item>
    </style>
    <style name="BackupActivityTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:actionBarStyle">@style/transparentActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="ButtonRestore">
        <item name="android:background">@drawable/cloud_restore_btn_bg</item>
    </style>
    <style name="ButtonRemove">
        <item name="android:textColor">@miui:color/v5_button_text_dark</item>
        <item name="android:background">@miui:drawable/v5_btn_bg_negative_warn_light</item>
    </style>
    <style name="TextPrimary">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_primary</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>
    <style name="Divider" parent="@miui:style/V5.Widget.BottomBar.TopLine" />
</resources>
