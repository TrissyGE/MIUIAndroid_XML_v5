<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="@*android:attr/textAppearance">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextAppearance.Content" parent="@style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ff666666</item>
    </style>
    <style name="TextAppearance.Medium" parent="@style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
    </style>
    <style name="TextAppearance.Small" parent="@style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
    </style>
    <style name="TextAppearance.Button" parent="@style/TextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/deepgrey</item>
    </style>
    <style name="TextAppearance.List.Primary.Oragne" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:textColor">@color/primary_text_orange</item>
    </style>
    <style name="TextAppearance.Title.small" parent="@miui:style/V5.TextAppearance.Title">
        <item name="android:textSize">@miui:dimen/v5_text_font_size_small</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ActionBar" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:background">@drawable/action_bar_bg</item>
    </style>
    <style name="ActionBar.UnShown" parent="@style/ActionBar">
        <item name="android:height">0.0dip</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="Item" parent="@miui:style/V5.Widget.ListView">
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/item_bg</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="Item.SingleLine" parent="@style/Item">
        <item name="android:textAppearance">@miui:style/V5.TextAppearance.List</item>
        <item name="android:layout_height">@miui:dimen/v5_list_view_single_line_height</item>
    </style>
    <style name="Item.DoubleLine" parent="@style/Item">
        <item name="android:textAppearance">@miui:style/V5.TextAppearance.List.Primary</item>
        <item name="android:layout_height">@miui:dimen/v5_list_view_double_line_height</item>
    </style>
    <style name="Widget.RatingBar.Edit" parent="@miui:style/V5.Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1.0</item>
    </style>
    <style name="Theme" parent="@miui:style/V5.Theme.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>
    <style name="Theme.LargeActionBar" parent="@style/Theme">
        <item name="android:actionBarSize">70.0dip</item>
    </style>
    <style name="Theme.WithoutTitle" parent="@style/Theme">
        <item name="android:actionBarStyle">@style/ActionBar.UnShown</item>
    </style>
    <style name="Theme.NoAnimation" parent="@miui:style/V5.Theme.Light.Translucent.NoTitle">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
