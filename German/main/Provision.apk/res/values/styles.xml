    <style name="Widget.Seperator" parent="@miui:style/V5.Widget">
        <item name="android:background">@drawable/seperator</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/seperator_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/seperator_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/seperator_horizontal_margin</item>
    </style>
    <style name="ActionBar.Provision.Title" parent="@miui:style/V5.Widget.ActionBar.Solid.Settings">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>
    <style name="Theme.Provision.Title" parent="@miui:style/V5.Theme.Light.Settings">
        <item name="android:actionBarStyle">@style/ActionBar.Provision.Title</item>
        <item name="android:homeAsUpIndicator">@drawable/action_bar_empty_logo</item>
    </style>
    <style name="Theme.Provision.FullScreen" parent="@miui:style/V5.Theme.Light.NoTitle">
        <item name="android:windowFullscreen">true</item>
    </style>
