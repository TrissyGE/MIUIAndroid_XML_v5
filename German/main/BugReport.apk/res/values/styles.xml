        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffaaaaaa</item>
    </style>
    <style name="TextAppearance.Content" parent="@style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ff666666</item>
    </style>
    <style name="TextAppearance.Medium" parent="@style/TextAppearance">
        <item name="android:textSize">18.0sp</item>
    </style>
    <style name="TextAppearance.Small" parent="@style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff666666</item>
    </style>
    <style name="ActionBar.Title" parent="@miui:style/V5.Widget.ActionBar.Solid.Settings">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>
    <style name="Theme.Title" parent="@miui:style/V5.Theme.Light.Settings">
