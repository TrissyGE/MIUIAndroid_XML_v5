<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.List.Primary" parent="@miui:style/V5.TextAppearance.List.Primary" />
    <style name="TextAppearance.List.Secondary" parent="@miui:style/V5.TextAppearance.List.Secondary" />
    <style name="TextAppearance.PreferenceCategory" parent="@miui:style/V5.TextAppearance.PreferenceCategory" />
    <style name="TextAppearance.PreferenceList" parent="@miui:style/V5.TextAppearance.PreferenceList" />
    <style name="Widget.ActionBar.TabText" parent="@miui:style/V5.Widget.ActionBar.TabText" />
    <style name="Widget.TabBar" parent="@miui:style/V5.Widget.SecondaryTabIndicator" />
    <style name="Widget.TabView" parent="@miui:style/V5.Widget.SecondaryTab" />
    <style name="Widget.ListView" parent="@miui:style/V5.Widget.ListView" />
    <style name="Widget.ListView.Item.DoubleLine" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine" />
    <style name="Widget.ListView.Item.TripleLine" parent="@miui:style/V5.Widget.ListView.Item.TrebleLine" />
    <style name="Widget.Button.Warning" parent="@miui:style/V5.Widget.Button.PositiveWarn" />
    <style name="Widget.Button.Warning.Negative" parent="@miui:style/V5.Widget.Button.NegativeWarn" />
    <style name="Widget.ProgressBar.Horizontal" parent="@miui:style/V5.Widget.ProgressBar.Horizontal.Small" />
    <style name="Widget.RatingBar.Small" parent="@miui:style/V5.Widget.RatingBar.Small" />
    <style name="Widget.RatingBar" parent="@miui:style/V5.Widget.RatingBar" />
    <style name="Widget.TextView" parent="@miui:style/V5.Widget.TextView" />
    <style name="Theme.ResourceBrowser" parent="@miui:style/V5.Theme.Light" />
    <style name="Theme.ResourceBrowser.List" parent="@style/Theme.ResourceBrowser">
        <item name="miui:v5_action_bar_tab">true</item>
        <item name="miui:v5_title_bar_back_button_search_mode">@miui:drawable/v5_title_bar_back_button_light</item>
        <item name="miui:v5_title_bar_bg_search_mode">@drawable/search_bar_bg</item>
    </style>
    <style name="Theme.ResourceBrowser.List.Home" parent="@style/Theme.ResourceBrowser.List">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.List.Home</item>
        <item name="android:homeAsUpIndicator">@null</item>
    </style>
    <style name="Widget.ActionBar.List.Home" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:logo">@drawable/action_bar_logo</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
    </style>
    <style name="ResourceBrowser">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ResourceBrowser.ListItem" parent="@style/ResourceBrowser">
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ResourceBrowser.HorizontalLine" parent="@style/ResourceBrowser">
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="ResourceBrowser.ResourceImage" parent="@style/ResourceBrowser">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/resource_thumbnail_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ResourceBrowser.ResourceDescription" parent="@style/ResourceBrowser">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ResourceBrowser.ResourceDescription.Vertical" parent="@style/ResourceBrowser.ResourceDescription">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="ResourceBrowser.ResourceDescription.Horizontal" parent="@style/ResourceBrowser.ResourceDescription">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ResourceBrowser.ResourceDescription.Font" parent="@style/ResourceBrowser.ResourceDescription">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="ResourceBrowser.ResourceDescription.Font.Price" parent="@style/ResourceBrowser.ResourceDescription.Font">
        <item name="android:textSize">10.0sp</item>
    </style>
    <style name="ResourceBrowser.ResourceDescription.SubDescription" parent="@style/ResourceBrowser.ResourceDescription">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">top</item>
    </style>
    <style name="ResourceBrowser.Widget.ProgressBar.ReadOnly" parent="@style/Widget.ProgressBar.Horizontal">
        <item name="android:background">@null</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/resource_progressbar_readonly</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ResourceBrowser.Widget.RatingBar.ReadOnly" parent="@style/Widget.RatingBar.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:stepSize">0.5</item>
    </style>
    <style name="ResourceBrowser.Widget.RatingBar.Edit" parent="@style/Widget.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1.0</item>
    </style>
    <style name="Resource.Detail.Category.Title" parent="@style/Widget.TextView">
        <item name="android:textColor">@color/resource_section_title_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/detail_category_horizontal_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Resource.Detail.Category.Title.WithBg" parent="@style/Resource.Detail.Category.Title">
        <item name="android:background">@drawable/resource_detail_category_title_bg</item>
    </style>
    <style name="Resource.Comment.TextAppearance.List.Primary" parent="@style/TextAppearance.List.Primary">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Resource.Comment.TextAppearance.List.Secondary" parent="@style/TextAppearance.List.Secondary">
        <item name="android:textSize">@dimen/resource_comment_secondary_text_size</item>
    </style>
    <style name="Theme.Light.Dialog" parent="@miui:style/V5.Theme.Light.Dialog" />
    <style name="Theme.ThemeManager.Wallpaper" parent="@miui:style/V5.Theme.Dark">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="WallpaperMenuPopupAnimation" parent="@*android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/wallpaper_menu_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/wallpaper_menu_popup_fade_out</item>
    </style>
    <style name="WallpaperInfoPopupAnimation" parent="@*android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/wallpaper_info_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/wallpaper_info_popup_fade_out</item>
    </style>
    <style name="WallpaperDetailInfoTitle">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="WallpaperDetailInfoContent">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">2.0</item>
    </style>
</resources>
