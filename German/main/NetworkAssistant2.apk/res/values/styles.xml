<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MainPage" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:displayOptions">none</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarItemBackground">@*android:color/transparent</item>
    </style>
    <style name="Theme.ListPage" parent="@miui:style/V5.Theme.Light.Settings" />
    <style name="Theme.Provision" parent="@miui:style/V5.Theme.Light.Settings">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
        <item name="android:homeAsUpIndicator">@drawable/action_bar_empty_logo</item>
    </style>
    <style name="Theme.Panel" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="TextAppearance.Provision" parent="@miui:style/V5.TextAppearance">
        <item name="android:textSize">13.0sp</item>
    </style>
    <style name="Button.Provision" parent="@miui:style/V5.Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:layout_marginBottom">15.0dip</item>
    </style>
    <style name="Widget.Seperator" parent="@miui:style/V5.Widget">
        <item name="android:background">@drawable/seperator</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/seperator_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/seperator_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/seperator_horizontal_margin</item>
    </style>
    <style name="TextView.Info.Provision" parent="@miui:style/V5.Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Provision</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_view_info_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/text_view_info_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/text_view_info_horizontal_margin</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
</resources>
