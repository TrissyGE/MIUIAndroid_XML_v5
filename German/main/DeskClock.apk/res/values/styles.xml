<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="clock">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="AlarmClockTheme" parent="@*android:style/Theme.Holo.DialogWhenLarge" />
    <style name="SetAlarmTheme" parent="@*android:style/Theme.Holo.DialogWhenLarge" />
    <style name="AlarmAlertFullScreenTheme" parent="@miui:style/V5.Theme.Light.NoTitle">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="SearchActionBarStyle" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="TimezoneSearchTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:actionBarStyle">@style/SearchActionBarStyle</item>
    </style>
    <style name="RoundTouchButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ButtonStripLeft">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_strip_trans_left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ButtonStripMiddle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_strip_trans_middle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ButtonStripRight">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_strip_trans_right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="alarm_list_left_column">
        <item name="android:layout_width">@dimen/alarm_list_left_column_width</item>
        <item name="android:layout_height">@dimen/alarm_list_left_column_height</item>
    </style>
    <style name="DeskClockTheme" parent="@miui:style/V5.Theme.Light.ActionBar.NoTitle">
        <item name="miui:v5_action_bar_tab">true</item>
        <item name="miui:v5_bottom_bar_bg">@drawable/v5_bottom_bar_bg_light</item>
    </style>
    <style name="EmptyViewTextStyle" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:textColor">@color/empty_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TimerButtonStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/timer_button_drawable_padding</item>
    </style>
    <style name="NumberViewTextStyle">
        <item name="android:textSize">@dimen/number_view_text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:shadowColor">#80ffffff</item>
    </style>
    <style name="TutorialTextStyle">
        <item name="android:textSize">@dimen/tutorial_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AlarmDurationTextStyle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/alarm_duration_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/alarm_duration_text_margin_bottom</item>
    </style>
    <style name="AddButtonTextStyle">
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/ic_menu_add</item>
        <item name="android:drawablePadding">@dimen/add_button_text_padding</item>
    </style>
    <style name="TimeUnitTextStyle" parent="@miui:style/V5.TextAppearance.List.Secondary">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/timer_hour_unit</item>
        <item name="android:paddingLeft">@dimen/timer_hour_unit_paddingleft</item>
    </style>
    <style name="DeskClockListItemDoubleLineStyle" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0.0dip</item>
    </style>
</resources>
