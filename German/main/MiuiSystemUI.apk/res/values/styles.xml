<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" />
    <style name="TextAppearance.StatusBar" parent="@style/TextAppearance">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>
    <style name="TextAppearance.StatusBar.IntruderAlert" parent="@style/TextAppearance.StatusBar" />
    <style name="TextAppearance.StatusBar.SystemPanel" parent="@style/TextAppearance.StatusBar">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff808080</item>
    </style>
    <style name="TextAppearance.StatusBar.TextButton" parent="@style/TextAppearance.StatusBar">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.StatusBar.Clock" parent="@style/TextAppearance.StatusBar">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_textColor</item>
    </style>
    <style name="TextAppearance.StatusBar.Carrier" parent="@style/TextAppearance.StatusBar">
        <item name="android:textSize">13.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_textColor</item>
    </style>
    <style name="TextAppearance.StatusBar.Expanded" parent="@style/TextAppearance.StatusBar" />
    <style name="TextAppearance.StatusBar.Expanded.Clock" parent="@style/TextAppearance.StatusBar.Expanded">
        <item name="android:textSize">38.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_expanded_clock</item>
    </style>
    <style name="TextAppearance.StatusBar.Expanded.Date" parent="@style/TextAppearance.StatusBar.Expanded">
        <item name="android:textSize">@dimen/expanded_date_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_expanded_date</item>
        <item name="android:shadowColor">#19000000</item>
        <item name="android:shadowDx">2.5</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">4.5</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.StatusBar.Expanded.Network" parent="@style/TextAppearance.StatusBar.Expanded.Date">
        <item name="android:textColor">#ff999999</item>
    </style>
    <style name="Animation" />
    <style name="Animation.ShirtPocketPanel" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@miui:anim/android_grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@miui:anim/android_shrink_fade_out_from_bottom</item>
    </style>
    <style name="Animation.RecentPanel" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@miui:anim/android_grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@miui:anim/android_shrink_fade_out_from_bottom</item>
    </style>
    <style name="Animation.StatusBar" parent="@style/Animation" />
    <style name="Animation.StatusBar.IntruderAlert" parent="@style/Animation.StatusBar">
        <item name="android:windowEnterAnimation">@anim/priority_alert_enter</item>
        <item name="android:windowExitAnimation">@anim/priority_alert_exit</item>
    </style>
    <style name="TextAppearance.StatusBar.PhoneTicker" parent="@style/TextAppearance.StatusBar">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/status_bar_textColor</item>
    </style>
    <style name="StatusBarGridItem">
        <item name="android:textSize">@dimen/toggle_text_size</item>
        <item name="android:textColor">@color/toggle_lable_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/status_bar_grid_item_bg</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">@integer/toggle_text_lines</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="StatusBarTab">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/tab_lable_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#d9ffffff</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="TaskItemTitle" parent="@*android:style/TextAppearance.Small">
        <item name="android:textColor">@color/task_manager_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:lines">1</item>
        <item name="android:shadowColor">@color/task_item_text_shadowColor</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="ToggleArrangement" parent="@miui:style/V5.Theme.Light.Settings">
        <item name="android:windowBackground">@miui:drawable/v5_window_bg_light</item>
    </style>
    <style name="Theme.NoTitle.FullScreen" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
