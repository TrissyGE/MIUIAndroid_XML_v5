<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WeatherTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>
    <style name="ActionBarStyle" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:height">0.0dip</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="WeatherMainTheme" parent="@miui:style/V5.Theme.Light">
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <style name="circle_progressbar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/circle_progressbar</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>
    <style name="circle_main_progressbar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/circle_main_progressbar</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:indeterminateBehavior">repeat</item>
    </style>
    <style name="background_null">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@*android:style/Animation.Translucent</item>
    </style>
    <style name="text_group_title">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#70333333</item>
        <item name="android:gravity">left|center</item>
    </style>
    <style name="text_shadow">
        <item name="android:shadowColor">#33000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">4.0</item>
        <item name="android:shadowRadius">7.0</item>
    </style>
    <style name="text_shadow_1">
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <style name="text_shadow_2">
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">3.0</item>
    </style>
    <style name="aqi_deails_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff929292</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="aqi_deails_taps_text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#e0696969</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="aqi_deails_publish_time_text">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ff9e9e9e</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="weather_next_date_text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff929394</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="weather_next_weather_text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff7f8081</item>
        <item name="android:gravity">right|center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="weather_next_temperature_text">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff626262</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="weather_next_no_data">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff7f8081</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="loading_dialog">
        <item name="android:windowBackground">@drawable/loading_dialog_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnterAnimation">@*android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@*android:anim/fade_out</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>
