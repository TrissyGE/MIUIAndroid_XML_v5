<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBarStyle" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:height">@dimen/log_detail_title_height</item>
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="UnreadCount">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@miui:color/v5_primary_text_dark</item>
    </style>
    <style name="TextAppearance.List.Primary.Highlight" parent="@miui:style/V5.TextAppearance.List.Primary">
        <item name="android:textColor">@miui:color/information_warning</item>
        <item name="android:textColorLink">@miui:color/information_warning</item>
    </style>
    <style name="EditorTitleStyle" parent="@miui:style/V5.Widget.EditMode.TopBar">
        <item name="android:background">@drawable/editor_title_bg</item>
    </style>
    <style name="AntiSpam.Theme.Tab" parent="@miui:style/V5.Theme.Light">
        <item name="miui:v5_action_bar_tab">true</item>
    </style>
    <style name="AntiSpam.Theme.LogActivity" parent="@miui:style/V5.Theme.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
</resources>
